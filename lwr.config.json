{
    "lwc": {
        "modules": [
            { "dir": "$rootDir/src/modules" }
        ]
    },
    "bundleConfig": {
        "exclude": [
            "lwc",
            "@lwc/synthetic-shadow"
        ]
    },
    "layoutsDir": "$rootDir/src/layouts",
    "routes": [
        {
            "id": "home",
            "path": "/",
            "rootComponent": "app/app",
            "layoutTemplate": "$layoutsDir/main.njk"
        }
    ]
}